<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.RegisterFragment">


    <EditText
        android:id="@+id/editText_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:layout_toRightOf="@+id/imageView_phone"
        android:layout_toEndOf="@+id/imageView_phone"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editText_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_phone"
        android:hint="请设置密码"
        android:layout_toEndOf="@+id/imageView_phone"
        android:layout_toRightOf="@+id/imageView_phone"
        android:ems="10"
        android:inputType="textPassword"/>

    <ImageView
        android:id="@+id/imageView_phone"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:src="@drawable/loginactivity_shouji"
        android:layout_alignTop="@+id/editText_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/imageView_psd"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:src="@drawable/loginactivity_mima"
        android:layout_alignBottom="@+id/editText_psd"
        android:layout_alignParentStart="true" />
</RelativeLayout>
