<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.LoginFragment">


    <EditText
        android:id="@+id/editText_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:layout_toRightOf="@+id/imageView_phone"
        android:layout_toEndOf="@+id/imageView_phone"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editText_psd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_phone"
        android:hint="密码"
        android:layout_toEndOf="@+id/imageView_phone"
        android:layout_toRightOf="@+id/imageView_phone"
        android:ems="10"
        android:inputType="textPassword"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="显示密码"
        android:layout_below="@+id/editText_psd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:background="@drawable/button_setting"
        style="@style/MyButton2"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:id="@+id/imageView_phone"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:src="@drawable/iconfont_personalcenter"
        android:layout_alignTop="@+id/editText_phone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/imageView_psd"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_above="@+id/checkBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/loginactivity_mima"/>

</RelativeLayout>
